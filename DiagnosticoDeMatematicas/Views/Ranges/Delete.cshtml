@model DiagnosticoDeMatematicas.Models.Range

@{
    ViewBag.Title = "Borrar rango";
}

<h2>Borrar rango</h2>

<h3>¿Estás seguro de querer borrar este rango?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Variable.Symbol)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Variable.Symbol)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Minimum)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Minimum)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Maximum)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Maximum)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Borrar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar a variable", "Details", "Variables", new { questionID = Model.QuestionId, symbol = Model.Symbol }, null)
        </div>
    }
</div>
