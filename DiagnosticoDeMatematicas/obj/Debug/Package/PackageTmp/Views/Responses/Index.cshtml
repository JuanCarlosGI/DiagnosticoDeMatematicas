@model IEnumerable<DiagnosticoDeMatematicas.Models.Response>

@{
    ViewBag.Title = "Index";
}

<h2>Historial de respuestas</h2>

<table class="table table-hover table-striped">
    <tr>
        <th>Examen</th>
        <th>Usuario</th>
        <th>@Html.DisplayNameFor(model => model.Date)</th>
        <th>@Html.DisplayNameFor(model => model.Grade)</th>
        <th></th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Exam.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.User.FullName)</td>
        <td>@Html.DisplayFor(modelItem => item.Date)</td>
        <td>@((int)(item.Grade / 100.0 * 20.0)) de 20</td>
        <td>@Html.ActionLink("Detalles", "Details", new { id=item.Id })</td>
        <td>@Html.ActionLink("Borrar", "Delete", new { id=item.Id })</td>
    </tr>
}

</table>
